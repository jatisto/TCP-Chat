@model IEnumerable<TCP_Chat.Models.HistoryLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Log</h2>

<form method="post" asp-action="Index">

    <div class="form-group" id="dateActionFrom">                
        <label class="control-label">Дата</label>
        <input 
        id="dateActionFromAsset" 
        type="date" 
        class="form-control" 
        name="date"
        />
    </div>
    <input type="submit" value="Send">

    <div class="form-group" id="dateActionFrom">                
        <label class="control-label">Имя</label>
        <input 
        id="dateActionFromAsset" 
        type="text" 
        class="form-control" 
        name="name"
        />
    </div>
    <input type="submit" value="Send">
</form>

<table class="table tablemy">
    <thead class="caption">
        <tr class="trmy">
            <th class="thmy">
               Отправитель
            </th>
            <th class="thmy">
               Получатель
            </th>
            <th class="thmy">
               Сообщение
            </th>
            <th class="thmy">
               Дата
            </th>
            <th class="thmy"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="tdmy">
                @Html.DisplayFor(modelItem => item.UserFrom.UserName)
            </td>
            <td class="tdmy">
                @Html.DisplayFor(modelItem => item.UserTo.UserName)
            </td>
            <td class="tdmy">
                @Html.DisplayFor(modelItem => item.Context)
            </td>
            <td class="tdmy">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
        </tr>
        }
    </tbody>
</table>
